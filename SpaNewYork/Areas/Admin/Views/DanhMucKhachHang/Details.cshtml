@model SpaNewYork.Models.DanhMucKhachHang

@{
    ViewData["Title"] = "Chi tiết khách hàng";
}

<h1 class="text-center text-primary">Chi tiết khách hàng</h1>

<div class="card shadow p-4 mb-4 bg-white rounded">
    <h4 class="text-secondary">Thông tin khách hàng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3 font-weight-bold">Loại khách hàng</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.LoaiKhachHang)</dd>

        <dt class="col-sm-3 font-weight-bold">Mã khách hàng</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.MaKhachHang)</dd>

        <dt class="col-sm-3 font-weight-bold">Tên khách hàng</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.TenKhachHang)</dd>

        <dt class="col-sm-3 font-weight-bold">Số điện thoại</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.SoDienThoai)</dd>

        <dt class="col-sm-3 font-weight-bold">Địa chỉ</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.DiaChi)</dd>

        <dt class="col-sm-3 font-weight-bold">Ghi chú</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.GhiChu)</dd>

        <dt class="col-sm-3 font-weight-bold">Ngày sinh</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.NgaySinh)</dd>
    </dl>
</div>

<div class="text-center">
    <a asp-action="Edit" asp-route-id="@Model?.STT" class="btn btn-warning"><i class="fas fa-edit"></i> Sửa</a>
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Quay lại</a>
</div>
