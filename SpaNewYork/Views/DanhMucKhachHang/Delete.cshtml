@model SpaNewYork.Models.DanhMucKhachHang

@{
    ViewData["Title"] = "Xóa khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Xóa khách hàng</h6>
    </div>
    <div class="card-body">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                <ul>
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <li>@error.ErrorMessage</li>
                    }
                </ul>
            </div>
        }

        <div class="alert alert-warning">
            <h5><i class="fas fa-exclamation-triangle"></i> Cảnh báo!</h5>
            <p>Bạn có chắc chắn muốn xóa khách hàng này không?</p>
            <p>Thao tác này không thể hoàn tác sau khi thực hiện.</p>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered">
                <tr>
                    <th>STT</th>
                    <td>@Model.STT</td>
                </tr>
                <tr>
                    <th>Mã khách hàng</th>
                    <td>@Model.MaKhachHang</td>
                </tr>
                <tr>
                    <th>Tên khách hàng</th>
                    <td>@Model.TenKhachHang</td>
                </tr>
                <tr>
                    <th>Loại khách hàng</th>
                    <td>@Model.LoaiKhachHang</td>
                </tr>
                <tr>
                    <th>Số điện thoại</th>
                    <td>@(string.IsNullOrWhiteSpace(Model.SoDienThoai) ? "Không có" : Model.SoDienThoai)</td>
                </tr>
                <tr>
                    <th>Địa chỉ</th>
                    <td>@(string.IsNullOrWhiteSpace(Model.DiaChi) ? "Không có" : Model.DiaChi)</td>
                </tr>
                <tr>
                    <th>Ngày sinh</th>
                    <td>@(string.IsNullOrWhiteSpace(Model.NgaySinh) ? "Không có" : Model.NgaySinh)</td>
                </tr>
                <tr>
                    <th>Ghi chú</th>
                    <td>@(string.IsNullOrWhiteSpace(Model.GhiChu) ? "Không có" : Model.GhiChu)</td>
                </tr>
            </table>
        </div>

        <form asp-action="Delete" method="post" onsubmit="return confirmDelete()">
            <input type="hidden" asp-for="STT" />
            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại danh sách
                </a>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Xác nhận xóa
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Bạn có chắc chắn muốn xóa khách hàng này không? Thao tác này không thể hoàn tác.");
        }
    </script>
}