@model SpaNewYork.Models.DanhMucHangHoaDichVu

@{
    ViewData["Title"] = "Xóa danh mục hàng hóa & dịch vụ";
}
<div class="card">
    <h5 class="card-header">@ViewData["Title"]</h5>
    <div class="card-body">
        <form asp-action="Delete">
            <input type="hidden" asp-for="STT" />

            <div class="alert alert-danger" role="alert">
                <i class="fa-light fa-triangle-exclamation"></i> Bạn có muốn xóa danh mục <strong>@Model.TenHHDV</strong> không?
            </div>

            <div class="mb-0">
                <button type="submit" class="btn btn-danger"><i class="fa-light fa-circle-check"></i> Xác nhận xóa</button> hoặc <a asp-action="Index">Quay về danh sách</a>
            </div>
        </form>
    </div>
</div>